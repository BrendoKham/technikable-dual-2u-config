#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define BAS_L 0
#define NAV_L 1
#define NUM_L 2
#define SYM_L 3

// Using layer taps on thumbs, having quick tap as well helps w/ repeating space/backspace

&lt {
    quick_tap_ms = <200>;
    tapping-term-ms = <250>;
};

/ {
    chosen { zmk,matrix_transform = &dual_2u_transform; };

    conditional_layers { compatible = "zmk,conditional-layers"; };

    macros {
        taskmanager: taskmanager {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_CONTROL &kp LEFT_SHIFT &kp ESCAPE>;
            label = "TASKMANAGER";
        };

        Copy: Copy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(S)>;
            label = "COPY";
        };

        Paste: Paste {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(V)>;
            label = "PASTE";
        };
    };

    combos { compatible = "zmk,combos"; };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
&kp ESC    &kp Q  &kp W      &kp E         &kp R        &kp T               &kp Y  &kp U     &kp I                       &kp O                      &kp P                   &kp BACKSPACE
&kp TAB    &kp A  &kp S      &kp D         &kp F        &kp G               &kp H  &kp J     &kp K                       &kp L                      &mt DOUBLE_QUOTES SEMI  &mt SINGLE_QUOTE RIGHT_BRACKET
&kp LSHFT  &kp Z  &kp X      &kp C         &kp V        &kp B               &kp N  &kp M     &mt LEFT_PARENTHESIS COMMA  &mt RIGHT_PARENTHESIS DOT  &mt UNDER FSLH          &kp RET
                  &kp LCTRL  &kp LEFT_ALT  &lt 1 SPACE         &lt 2 EQUAL         &kp HOME  &none
            >;
        };

        num_layer {
            bindings = <
&kp ASTRK  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp BACKSLASH  &kp DOUBLE_QUOTES          &kp AMPS   &kp EXCL    &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp PERCENT    &kp BACKSPACE
&kp PLUS   &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp MINUS      &kp SINGLE_QUOTE           &kp PIPE   &kp COLON   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp QUESTION   &kp AT
&kp HASH   &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp DOT        &kp UNDER                  &kp TILDE  &kp DOLLAR  &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp LESS_THAN  &kp GREATER_THAN
                         &kp NUMBER_0  &kp EQUAL     &trans                            &trans             &trans      &trans
            >;
        };

        nav_layer {
            bindings = <
&kp ESCAPE          &kp HOME           &kp PAGE_DOWN    &kp PG_UP           &kp END    &kp C_PREV            &kp C_NEXT          &kp F9        &kp F10     &kp F11  &kp F12  &kp BACKSPACE
&kp K_CONTEXT_MENU  &kp LEFT_ARROW     &kp DOWN         &kp UP_ARROW        &kp RIGHT  &kp C_PAUSE           &kp C_PLAY          &kp F5        &kp F6      &kp F7   &kp F8   &kp C_VOLUME_UP
&trans              &mt K_REDO K_UNDO  &kp PRINTSCREEN  &mt K_PASTE K_COPY  &kp DEL    &kp C_REWIND          &kp C_FAST_FORWARD  &kp F1        &kp F2      &kp F3   &kp F4   &kp C_VOL_DN
                                       &bt BT_SEL 0     &bt BT_SEL 1        &trans                   &trans                      &bt BT_SEL 2  &bt BT_CLR
            >;
        };
    };
};
